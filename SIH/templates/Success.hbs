<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrator - Success Stories</title>
    <link rel="stylesheet" href="Success.css">
</head>
<body>
    <div class="admin-container">
        <h1>Post Success Stories</h1>
        <div class="form-container">
            <form id="successStoryForm">
                <div class="form-group">
                    <label for="storyType">Select Story Type:</label>
                    <select id="storyType" name="storyType" required>
                        <option value="" disabled selected>Select type</option>
                        <option value="gallery">Gallery</option>
                        <option value="profiles">Profiles</option>
                        <option value="interviews">Interviews</option>
                    </select>
                </div>

                <!-- Gallery Form -->
                <div id="galleryForm" class="form-section hidden">
                    <h2>Gallery</h2>
                    <div class="form-group">
                        <label for="galleryTitle">Title:</label>
                        <input type="text" id="galleryTitle" name="galleryTitle">
                    </div>
                    <div class="form-group">
                        <label for="galleryImage">Image URL:</label>
                        <input type="url" id="galleryImage" name="galleryImage">
                    </div>
                </div>

                <!-- Profiles Form -->
                <div id="profilesForm" class="form-section hidden">
                    <h2>Profiles</h2>
                    <div class="form-group">
                        <label for="profilePhoto">Photo URL:</label>
                        <input type="url" id="profilePhoto" name="profilePhoto" >
                    </div>
                    <div class="form-group">
                        <label for="fullName">Full Name:</label>
                        <input type="text" id="fullName" name="fullName">
                    </div>
                    <div class="form-group">
                        <label for="batch">Batch:</label>
                        <input type="text" id="batch" name="batch" >
                    </div>
                    <div class="form-group">
                        <label for="achievement">Achievement:</label>
                        <input type="text" id="achievement" name="achievement">
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" rows="4" ></textarea>
                    </div>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" id="location" name="location" >
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact:</label>
                        <input type="text" id="contact" name="contact" >
                    </div>
                </div>

                <!-- Interviews Form -->
                <div id="interviewsForm" class="form-section hidden">
                    <h2>Interviews</h2>
                    <div class="form-group">
                        <label for="interviewTitle">Title:</label>
                        <input type="text" id="interviewTitle" name="interviewTitle" >
                    </div>
                    <div class="form-group">
                        <label for="interviewDate">Date:</label>
                        <input type="date" id="interviewDate" name="interviewDate" >
                    </div>
                    <div class="form-group">
                        <label for="interviewVideo">Video URL:</label>
                        <input type="url" id="interviewVideo" name="interviewVideo" >
                    </div>
                    <div class="form-group">
                        <label for="interviewSummary">Summary:</label>
                        <textarea id="interviewSummary" name="interviewSummary" rows="4" ></textarea>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>
    </div>

    <script src="Success.js"></script>
</body>
</html>
